<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/normal_margin"
    android:paddingBottom="@dimen/normal_margin">

    <View
        android:id="@+id/shadow"
        android:layout_marginTop="-64dp"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/very_small_margin"
        android:layout_marginStart="@dimen/very_small_margin"
        android:background="@drawable/featured_video_shadow" />

    <View
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shadow"
        android:layout_below="@+id/first_clipper_imageView"
        android:background="@drawable/outer_shadow" />

    <FrameLayout
        android:id="@+id/preview_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/title_textView"
        android:layout_alignTop="@+id/background_view">

        <VideoView
            android:id="@+id/preview_videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin" />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/play_button_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_play" />
    </FrameLayout>

    <com.github.zagum.switchicon.SwitchIconView
        android:id="@+id/volume_iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/preview_video_layout"
        android:layout_alignEnd="@+id/preview_video_layout"
        android:layout_alignRight="@+id/preview_video_layout"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/normal_margin"
        android:padding="8dp"
        android:visibility="invisible"
        app:si_animation_duration="300"
        app:si_disabled_color="@android:color/white"
        app:si_enabled="true"
        app:si_tint_color="@android:color/white"
        app:srcCompat="@drawable/ic_volume_up" />

    <ImageView
        android:id="@+id/first_clipper_imageView"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_marginBottom="-38dp"
        android:layout_marginEnd="@dimen/big_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:src="@drawable/clipper" />

    <ImageView
        android:id="@+id/second_clipper_imageView"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginBottom="-38dp"
        android:layout_marginEnd="@dimen/big_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:src="@drawable/clipper" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_alignBottom="@+id/background_view"
        android:fontFamily="@font/burbank_big_regular_bold"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:text="A Video TITLE"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/featured_video_text_size" />

</RelativeLayout>